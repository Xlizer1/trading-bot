# CS2 Skin Monitor Configuration

# Monitoring Settings
DISCOUNT_THRESHOLD=0.25          # 25% below average price
MIN_PRICE_HISTORY=5              # Minimum price points needed for analysis
MONITORING_INTERVAL=5            # Minutes between monitoring cycles

# Rate Limiting
REQUEST_DELAY=3000               # Milliseconds between requests
RATE_LIMIT_DELAY=60000          # Milliseconds to wait when rate limited

# Currency Settings
CURRENCY=1                       # 1=USD, 2=GBP, 3=EUR, etc.
COUNTRY=US                       # Country code for regional pricing

# Data Storage
MAX_PRICE_HISTORY=100           # Maximum price points to store per item
MAX_ALERTS=1000                 # Maximum alerts to keep in history

# Debug Settings
DEBUG=false                      # Enable debug logging (shows API responses)
VERBOSE=false                    # Enable verbose output